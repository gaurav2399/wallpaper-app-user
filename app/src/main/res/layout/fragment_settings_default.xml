<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content" 
                  android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

        <ProgressBar
                android:id="@+id/settings_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        
        <ImageView android:background="@drawable/not_logged_in"
                android:layout_width="200dp"
                   android:layout_height="200dp"/>

        <TextView
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Oops! you have to sign in first..."
                android:layout_width="200dp"
                android:textSize="30sp"
                android:layout_height="wrap_content" android:fontFamily="casual"/>

        <com.google.android.gms.common.SignInButton
                android:layout_marginTop="5dp"
                android:id="@+id/btn_sig_in"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>